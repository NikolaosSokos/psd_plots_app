[Unit]
Description=Gunicorn process to serve PSD Plots App
After=network.target

[Service]
User=qc
Group=qc
WorkingDirectory=/darrays/qc-working/plots_app

# Use the full path to uv if 'which uv' points elsewhere
ExecStart=/usr/local/bin/uv run gunicorn --workers 4 --bind 0.0.0.0:5000 --timeout 120 app:app

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target